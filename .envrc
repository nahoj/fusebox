# Fuse
# export FUSE_LIB_PATH="/usr/lib/x86_64-linux-gnu/libfuse3.so"
export LD_LIBRARY_PATH="/usr/lib/x86_64-linux-gnu"

# JAVA_HOME
export SDKMAN_DIR="$HOME/.sdkman"
if [[ -s "$SDKMAN_DIR/bin/sdkman-init.sh" ]]; then
  source "$SDKMAN_DIR/bin/sdkman-init.sh"
  # Activate per-directory SDK versions from .sdkmanrc
  sdk env || true
else
  echo "SDKMAN not found at $SDKMAN_DIR. Install via https://sdkman.io/" >&2
fi

# Maven vs. JDK 23+
export MAVEN_OPTS="--sun-misc-unsafe-memory-access=allow"
